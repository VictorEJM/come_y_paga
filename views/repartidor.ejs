<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pedidos</title>
  </head>
  <body>
    <h1>Lista de pedidos</h1>
    <table>
      <thead>
        <tr>
          <th>Usuario</th>
          <th>Restaurante</th>
          <th>Pedido</th>
          <th>Precio</th>
          <th>Estado</th>
        </tr>
      </thead>
      <tbody>
        <% for (const pedido of pedidos) { %>
          <tr>
            <td><%= pedido.usuario.nombre %></td>
            <td><%= pedido.restaurante.nombre %></td>
            <td><%= pedido.plato %></td>
            <td><%= pedido.precio %></td>
            <td>
              <form method="POST" action="/repartidor/<%= pedido.id %>/estado">
                <button type="submit" name="estado" value="pendiente"<% if (pedido.estado === 'pendiente') { %> style="background-color: yellow;" <% } %>>Pendiente</button>
                <button type="submit" name="estado" value="en_proceso"<% if (pedido.estado === 'en_proceso') { %> style="background-color: yellow;" <% } %>>En proceso</button>
                <button type="submit" name="estado" value="entregado"<% if (pedido.estado === 'entregado') { %> style="background-color: yellow;" <% } %>>Entregado</button>
                <button type="submit" name="estado" value="incidencia"<% if (pedido.estado === 'incidencia') { %> style="background-color: yellow;" <% } %>>Incidencia</button>
              </form>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
